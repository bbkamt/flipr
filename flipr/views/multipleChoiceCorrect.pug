extends default

block content
  div.reviewContainer
    h3#pageTitle 
        | #{Deck}
    p#question #{Question}
    p#answer #{Answer}

    p Correct! 

    form(method='post' action='/api/multiplechoice/q')
        // name section of the buttons below is passed in body of html request 
        // can be accessed in .get and .post etc as req.body.NAME 
        button.btn.btn-review(type='submit', name='difficulty', value='1') Hard
        button.btn.btn-review(type='submit', name='difficulty', value='2') Good 
        button.btn.btn-review(type='submit', name='difficulty', value='3') Easy 