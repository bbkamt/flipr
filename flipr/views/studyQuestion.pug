extends default_study

block content
  div.reviewContainer
    h3#pageTitle 
        | #{Deck}
    p#question #{Question}
    if URL
      img(src=URL, alt="" style="width: 300px; height: 300px; margin-left: 30%")
    form(method='post' action='/api/study/decks')
      // name section of the buttons below is passed in body of html request 
      // can be accessed in .get and .post etc as req.body.NAME 
      button.btn.btn-displayAnswer(type='submit', name='deck', value=Deck) Show Answer
      
      