extends default

block content
  div.container
    h3.deck-name 
        | Main
  div.container 
    a(href=`/deck?id="hello"`)
        | Deck
  div.container
    form(method='post' action='/api/cards')
      div.form-group
        label(for="deck") Deck:
        input#deck.form-control(input name="deck" type='text', placeholder='Deck name')
      div.form-group
        label(for="question") Front:
        input#front.form-control(input name="question" type='text', placeholder='Front of the card')
      div.form-group
        label(for='back') Back: 
        input#back.form-control(input name="answer" type='text', placeholder='Back of the card')
      div.form-group
        label(for='tags') Tags: 
        input#tags.form-control(input name="tags" type='text', placeholder='Any tags')
      button.btn.btn-primary(type='submit') Create Card