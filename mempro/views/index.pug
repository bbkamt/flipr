extends default

block content
  div.mainPage 
    block.welcomeText 
      p     
        | Welcome to MemPro. Forget about forgetting. <br>
      p 
        | <br> 
      p 
        | MemPro lets you create your own flashcards, 
        | and stops the things you want to remember <br> 
        | fading from memory. <br>
      p 
        | <br>
      p 
        | Sign in, or register an account and let's <br> 
        | begin. 
    div.signIn 
      div.container
        h3.container 
            | Sign in 
      div.container
        form(method='post' action='/api/users')
          div.form-group
            label(for="username") Username:
            input#username.form-control(input name="username" type='text', placeholder='Your username')
          div.form-group
            label(for="password") Front:
            input#password.form-control(input name="password" type='text', placeholder='Your password')
          button.btn.btn-primary(type='submit') Sign in  
  